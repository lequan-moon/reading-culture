{
  "name": "reading-culture-backend",
  "version": "1.0.0",
  "description": "Backend for Daily Fun Reading App",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "seed:users": "node src/scripts/seedUsers.js",
    "seed:books": "node src/scripts/seedBooks.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/logs/*",
      "src/tests/*"
    ],
    "delay": "2"
  }
